<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="LineItem"
xmlns="http://ibatis.apache.org/mapping"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >
  <alias>
    <typeAlias alias="Tienda" type="Poleo.Objects.Tienda" />
	 <typeAlias alias="Contabilidad" type="Poleo.Objects.Contabilidad" />
  </alias>
  <statements>
    <select id="selectTiendaUp" resultClass="Tienda">
      select Ubicacion from Tiendas group by Ubicacion
    </select>
    
    <select id="SelectTipoTienda" resultClass="Tienda" parameterClass="Tienda">
      select Tipo from Tiendas
    <dynamic prepend="where">
      <isNotEmpty prepend="and" property="Ubicacion">
       Ubicacion=#Ubicacion#
      </isNotEmpty>  
    </dynamic>  
     group by Tipo
    </select>
    
    <select  id ="SelectTiendas" resultClass="Tienda" parameterClass="Tienda">
      select * from Tiendas where Activo = 1
      <!--<dynamic prepend="where">-->
        <isNotEmpty prepend="AND" property="Number_tienda" >
          Number_tienda = #Number_tienda#
        </isNotEmpty>
      <isNotEmpty prepend="and" property="Ubicacion">
       Ubicacion=#Ubicacion#
      </isNotEmpty>  
      <isNotEmpty prepend="and" property="Tipo">
        Tipo=#Tipo#
      </isNotEmpty> 
      <!--</dynamic>-->
      order by orden desc
    </select>
    
    <select ID="SELECTDQTIENDAS" resultClass="Tienda" parameterClass="Tienda">
      SELECT NumeroTienda AS Number_tienda,
      NombreCompleto AS Nombre_tienda,
      Gerente,
      Code
      FROM DQTiendas
      <dynamic prepend="where">
        <isNotEmpty property="Number_tienda" >
          NumeroTienda = #Number_tienda#
        </isNotEmpty>
      </dynamic>
      order by orden desc
    </select>

    <select id="SelectStoreByUserID" resultClass="Tienda" parameterClass="int">
      SELECT Tiendas.* FROM SM_UserXStore
      INNER JOIN Tiendas ON SM_UserXStore.NumberTienda = Tiendas.Number_tienda
      WHERE SM_UserXStore.IdUser = #value#
    </select>

    <select id="SelectTiendasOrden" resultClass="Tienda" parameterClass="Tienda">
      SELECT Nombre_tienda
      ,Number_tienda
      ,Tipo
      ,Ubicacion 
      FROM Tiendas WHERE Activo = 1  
      <isNotEmpty prepend="AND" property="Number_tienda" >
        Number_tienda= #Number_tienda#
      </isNotEmpty>
    <isNotEmpty prepend="AND" property="Tipo" >
      Tipo= #Tipo#
    </isNotEmpty>
    <isNotEmpty prepend="AND" property="Ubicacion" >
      Ubicacion = #Ubicacion#
    </isNotEmpty>
      ORDER BY Ubicacion, Nombre_tienda
    </select>

  </statements>
</sqlMap>
