<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="LineItem"
xmlns="http://ibatis.apache.org/mapping"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <alias>
    <typeAlias alias="UserXRol" type="Poleo.Objects.UserXRol" />
  </alias>

  <statements>
    <select id="SelectUserXRol" resultClass="UserXRol" parameterClass="int">
      <!--SELECT * FROM SM_UserXRol WHERE IdUser = #id#-->
      SELECT SM_UserXRol.*, SM_Roles.Name 
      FROM SM_UserXRol 
      INNER JOIN SM_Roles ON SM_UserXRol.IdRol = SM_Roles.IdRol
      WHERE IdUser = #id#
    </select>
  </statements>
</sqlMap>