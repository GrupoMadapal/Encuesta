<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="LineItem"
xmlns="http://ibatis.apache.org/mapping"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  
  <alias>
    <typeAlias alias="Objects" type="Poleo.Objects.Objects"/>
  </alias>

  <statements>
    <select id="SelectLstObjectsParents" resultClass="Objects">
      SELECT * FROM SM_Objects WHERE IdParent IS NULL
    </select>
    
    <select id="SelectLstObjectsByParents" resultClass="Objects" parameterClass="int">
      SELECT * FROM SM_Objects WHERE IdParent = #id#
    </select>
  </statements>
</sqlMap>