<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="LineItem"
xmlns="http://ibatis.apache.org/mapping"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >
  <alias>
    <typeAlias alias="SEF_Motorcycles" type="Poleo.Objects.SEF_Motorcycles" />
  </alias>

  <statements>
    <!--SEF-->
    <insert id="InsertSEF_Motorcycles" parameterClass="SEF_Motorcycles">
      INSERT INTO Motorcycles ( Year, Model, Serial, LicenseNumberPlate, NumberStore, NumEco, Location, Status)
      VALUES (#Year#, #Model#, #Serial#, #LicenseNumberPlate#, #NumberStore#, #NumEco#, #Location#, #Status# )
    </insert>

    <select id="SelectSerial" resultClass="SEF_Motorcycles" paramaterClass="SEF_Motorcycles">
      SELECT Serial FROM Motorcycles WHERE Serial = #Serial#      
    </select>
    
    <select id="SelectNumEco" resultClass="SEF_Motorcycles" paramaterClass="SEF_Motorcycles">
      SELECT * FROM Motorcycles    
    </select>
    
    <select id="SelectVehicle" resultClass="SEF_Motorcycles" paramaterClass="SEF_Motorcycles">
      SELECT * FROM Motorcycles WHERE NumEco = #NumEco#
    </select>
    
  <update id="UpdateVehicle" parameterClass="SEF_Motorcycles">
                                  
                                  UPDATE Motorcycles SET
      <isNotNull property="Year">
        Year = #Year#,
      </isNotNull>
     <isNotNull property="Model">
        Model = #Model#,
      </isNotNull> 
      <isNotNull property="Serial">
        Serial = #Serial#,
      </isNotNull>
    <isNotNull property="LicenseNumberPlate">
        LicenseNumberPlate = #LicenseNumberPlate#,
      </isNotNull>
      <isNotNull property="NumberStore">
        NumberStore = #NumberStore#,
      </isNotNull>
      <isNotNull property="NumEco">
        NumEco = #NumEco#,
      </isNotNull>
      <isNotNull property="Location">
        Location = #Location#,
      </isNotNull>
      <isNotNull>
        Status = #Status#
      </isNotNull>    
                  WHERE IDMotorcycle = #IDMotorcycle#
    </update>

  </statements>
</sqlMap>